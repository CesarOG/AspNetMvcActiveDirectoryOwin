@model AspNetMvcActiveDirectoryOwin.Web.Common.Mvc.DeleteConfirmationModel

@using (Html.BeginForm(Model.ActionName, Model.ControllerName, new { id = Model.Id }))
{
    <p>
        Are you sure you want to delete?
    </p>
    <p class="text-center">
        <button type="submit" class="btn btn-danger">Yes</button>
        <span id="" class="btn btn-default" onclick="$('#@Model.WindowId').data('kendoWindow').close();">No</span>
    </p>
}