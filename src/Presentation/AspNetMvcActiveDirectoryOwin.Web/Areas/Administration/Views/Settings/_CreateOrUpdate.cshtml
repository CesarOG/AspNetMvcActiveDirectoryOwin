@model  AspNetMvcActiveDirectoryOwin.Web.Common.Models.Settings.SettingModel

<div class="content">
    <div class="box box-primary form-horizontal">
        <div class="box-body">
            @Html.HiddenFor(model => model.Id)
            @Html.ValidationSummary("", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-3 col-sm-4 col-xs-12" })
                <div class="col-md-7 col-sm-8 col-xs-12">
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Value, new { @class = "control-label col-md-3 col-sm-4 col-xs-12" })
                <div class="col-md-7 col-sm-8 col-xs-12">
                    @Html.TextAreaFor(model => model.Value, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Value)
                </div>
            </div>
        </div>
    </div>
</div>